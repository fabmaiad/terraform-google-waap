pipeline {
    agent any

    environment {
        _BUILD_ID="${env.BUILD_ID}"
        _BRANCH_NAME="${env.BRANCH_NAME}"

        _TF_SA_EMAIL="sa-terraform-cicd@cicd-prj-bbee.iam.gserviceaccount.com" /* Service Account with terraform apply permissions */
        _STATE_BUCKET_NAME="cicd-prj-tfstate-bkt-1rd3" /* Bucket to store terraform state file */
        _PROJECT_ID="cicd-prj-bbee"
        _POLICY_REPO="CLOUDSOURCE"

        EXAMPLE_BUILD="web-app-protection-example"
        _GCLOUD_PATH="/var/lib/jenkins/google-cloud-sdk/bin"
    }

    stages{
        stage("Terraform Setup"){
            steps{
                sh '''
                echo "Setting up gcloud for impersonation"
                ${_GCLOUD_PATH}/gcloud config set auth/impersonate_service_account ${_TF_SA_EMAIL}
                echo "Adding bucket information to backends"
                for i in `find -name 'backend.tf'`; do sed -r -i "s/_BUCKET_GCS_/${_STATE_BUCKET_NAME}/" $i; done
                for i in `find -name 'jenkins-functions.sh'`;do chmod +x $i; done
                '''
            }
        }
        stage('TF init') {
            when {
              anyOf {
                  branch 'dev'
                  branch 'prd'
                  branch 'npd'
              }
            }
            steps {
                sh '''
                export GOOGLE_IMPERSONATE_SERVICE_ACCOUNT=${_TF_SA_EMAIL}
                cd ${WORKSPACE}/examples/${EXAMPLE_BUILD}
                ./jenkins-functions.sh init $BRANCH_NAME
                '''
            }
        }
        stage('TF Plan ALL') {
            when {
                not {
                    anyOf {
                        branch 'dev'
                        branch 'prd'
                        branch 'npd'
                    }
                }
            }
            steps {
                def environments = ['dev', 'prd', 'npd']

                for (def env in environments){
                    def environmentPath = "${WORKSPACE}/examples/${EXAMPLE_BUILD}/enviroments/${env}"
                    echo "Terraform planning ${env} enviroment..."
                    
                    dir(environmentPath) {
                        sh 'export GOOGLE_IMPERSONATE_SERVICE_ACCOUNT=${_TF_SA_EMAIL}' /* Service Account for terraform */
                        sh 'cp -Prf ../../*.tf'                                        /* common terraform files */
                        sh './jenkins-functions.sh plan_validate_all $BRANCH_NAME'
                    }
                }
            }
        }
        stage('TF plan') {
            when {
                anyOf {
                      branch 'dev'
                      branch 'prd'
                      branch 'npd'
                    }
                }
            steps {
                sh '''
                export GOOGLE_IMPERSONATE_SERVICE_ACCOUNT=${_TF_SA_EMAIL}
                cd ${WORKSPACE}/examples/${EXAMPLE_BUILD}
                ./jenkins-functions.sh plan $BRANCH_NAME
                '''
            }
        }
        stage('TF apply') {
            when {
              anyOf {
                  branch 'dev'
                  branch 'prd'
                  branch 'npd'
                }
            }
            steps {
                sh '''
                export GOOGLE_IMPERSONATE_SERVICE_ACCOUNT=${_TF_SA_EMAIL}
                cd ${WORKSPACE}/examples/${EXAMPLE_BUILD}
                ./jenkins-functions.sh apply $BRANCH_NAME
                '''
            }
        }
    }
}
